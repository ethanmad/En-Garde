<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity"
    android:id="@+id/layout"
    android:background="#202020">

    <!--Timer-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/timer"
        android:textColor="#FFFFFF"
        android:text="@string/timer_default"
        android:textSize="80sp"
        android:clickable="true"
        android:onClick="countDown"
        android:padding="20dp"
        android:typeface="sans"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/scoreOne"
        android:layout_alignStart="@+id/scoreOne" />

    <!--Fencer One Score-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fencer_one"
        android:id="@+id/scoreOne"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="20dp"
        android:onClick="addScoreOne"
        android:clickable="true"
        android:textSize="50sp"
        android:freezesText="true"
        android:padding="20dp"
        android:textColor="#FF0000"
        android:layout_centerHorizontal="true" />

    <!--Fencer Two Score-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fencer_two"
        android:id="@+id/scoreTwo"
        android:layout_alignTop="@+id/scoreOne"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="addScoreTwo"
        android:clickable="true"
        android:textSize="50sp"
        android:freezesText="true"
        android:padding="20dp"
        android:textColor="#00FF00" />

    <!--Yellow Card One-->
    <com.cengalabs.flatui.views.FlatButton
        flatui:blockButtonEffectHeight="3dp"
        flatui:theme="@array/flat_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yellowCardOne"
        android:layout_below="@+id/scoreOne"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:onClick=""/>

    <com.cengalabs.flatui.views.FlatButton
        flatui:blockButtonEffectHeight="3dp"
        flatui:theme="@array/flat_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/redCardOne"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/yellowCardOne"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
