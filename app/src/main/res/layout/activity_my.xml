<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity"
    android:id="@+id/mainLayout"
    android:background="#202020">

    <!--Timer-->


    <!--Fencer One Score-->


    <!--Fencer Two Score-->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/scoreTwo"
        android:layout_toEndOf="@+id/scoreOne"
        android:longClickable="true"
        android:id="@+id/cardLayout">

        <!--Yellow Card Button-->
        <com.cengalabs.flatui.views.FlatButton
            flatui:blockButtonEffectHeight="3dp"
            flatui:theme="@array/flat_yellow"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:id="@+id/yellowCardButton"
            android:clickable="true"
            android:onClick="showCardDialog"
            android:focusableInTouchMode="false"
            android:paddingLeft="10dp"
            android:layout_marginLeft="120dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!--Red Card Button-->
        <com.cengalabs.flatui.views.FlatButton
            flatui:blockButtonEffectHeight="3dp"
            flatui:theme="@array/flat_red"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:id="@+id/redCardButton"
            android:onClick="showCardDialog"
            android:layout_marginRight="120dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="150dp"
        android:id="@+id/scoreLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fencer_one_score"
            android:id="@+id/scoreOne"
            android:layout_marginLeft="28dp"
            android:onClick="addScore"
            android:clickable="true"
            android:textSize="60sp"
            android:freezesText="true"
            android:padding="20dp"
            android:textColor="#FF0000"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fencer_two_score"
            android:id="@+id/scoreTwo"
            android:onClick="addScore"
            android:clickable="true"
            android:textSize="60sp"
            android:freezesText="true"
            android:padding="20dp"
            android:textColor="#00FF00"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="28dp" />

        <com.cengalabs.flatui.views.FlatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/double_touch"
            android:id="@+id/doubleTouchButton"
            flatui:theme="@array/dark"
            android:onClick="addScore"
            android:clickable="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/timerLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/timer"
            android:textColor="#FFFFFF"
            android:text="@string/timer_default"
            android:textSize="70sp"
            android:clickable="true"
            android:onClick="countDown"
            android:padding="20dp"
            android:typeface="sans"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/period"
            android:id="@+id/periodView"
            android:textColor="#FFFFFF"
            android:autoText="false"
            android:layout_alignBottom="@+id/timer"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:id="@+id/penaltyLayoutLeft"
        android:layout_marginLeft="44dp"
        android:layout_alignBottom="@+id/scoreLayout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yellowCircleViewOne"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/yellow_circle" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/redCircleViewOne"
            android:src="@drawable/red_circle"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:id="@+id/penaltyLayoutRight"
        android:layout_marginRight="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/penaltyLayoutLeft">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yellowCircleViewTwo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/yellow_circle" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/redCircleViewTwo"
            android:src="@drawable/red_circle"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</RelativeLayout>
